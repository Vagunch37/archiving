<h1>Videos</h1>
<br />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Subject</th>
      <th>Language</th>
      <th>User</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Notes</th>
      <th>Text in</th>
      <th>Pub reason</th>
      <th>Rec reason</th>
      <th>Sound type</th>
      <th>Edited material</th>
      <th>Selling detail info</th>
      <th>Acceptable viewer</th>
      <th>Item special</th>
      <th>Item importance</th>
      <th>Count killed</th>
      <th>Count injured</th>
      <th>Count male</th>
      <th>Count female</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr> 
        <td><%= video.id %></td>
        <td><%= video.category.name %></td>
        <td><%= video.subcategory.name %></td>
        <td><%= video.subject.name %></td>
        <td><%= video.language.name  %></td>
        <td><%= video.user.email %></td>
        <td><%= link_to video.name, video %></td>
        <td><%= video.desc %></td>
        <td><%= video.notes %></td>
        <td><%= video.text_in %></td>
        <td><%= video.pub_reason %></td>
        <td><%= video.rec_reason %></td>
        <td><%= video.sound_type %></td>
        <td><%= video.edited_material %></td>
        <td><%= video.selling_detail_info %></td>
        <td><%= video.acceptable_viewer %></td>
        <td><%= video.item_special %></td>
        <td><%= video.item_importance %></td>
        <td><%= video.count_killed %></td>
        <td><%= video.count_injured %></td>
        <td><%= video.count_male %></td>
        <td><%= video.count_female %></td>
        <td><%= link_to 'Edit', edit_video_path(video), class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<br />
<%= link_to 'New Video', new_video_path, class:"btn btn-primary" %>
