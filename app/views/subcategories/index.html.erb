<h1>Subcategories</h1>
<br />
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.id %></td>
        <td><%= link_to subcategory.name, subcategory %></td>
        <td><%= subcategory.category.name %></td>
        <td><%= link_to 'Edit', edit_subcategory_path(subcategory), class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', subcategory, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_subcategory_path, class:"btn btn-primary" %>
