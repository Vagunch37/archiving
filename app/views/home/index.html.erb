

<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>                 
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<% end %>